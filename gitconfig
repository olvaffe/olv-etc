[core]
	editor = vim

[alias]
	# work with remotes
	f = fetch --prune
	fa = fetch --prune --all
	pr = pull --rebase
	pf = push --force
	ro = !"git remote set-url --push $1 DISABLED #"

	# work with branches
	b = branch
	ba = branch -a
	bd = branch -D
	c = checkout
	cb = checkout -b
	ch = checkout origin/HEAD
	c- = checkout @{-1}
	topic = checkout --no-track origin/HEAD -b

	# work with commits
	cp = cherry-pick
	ri = rebase --interactive

	# work with logs
	l = log
	lo = log --oneline
	lf = log --pretty=fuller

	fixes = show -s --pretty='format:Fixes: %h (\"%s\")'
	me = config sendemail.from
	alias = !"git config --get-regexp '^alias.'"

[credential]
	helper = store

[init]
	defaultBranch = main

[http]
	cookiefile = ~/.config/git/cookies.txt

[pull]
	ff = only

[push]
	default = simple

[sendemail]
	smtpEncryption = tls
	smtpServer = smtp.gmail.com
	smtpServerPort = 587
	smtpUser = olvaffe@gmail.com
	chainReplyTo = no
	confirm = auto
	from = Chia-I Wu <olvaffe@gmail.com>
	suppresscc = self

[user]
	name = Chia-I Wu
	email = olvaffe@gmail.com

[advice]
	detachedHead = false

[url "https://gitlab.freedesktop.org/"]
	insteadOf = git@gitlab.freedesktop.org:
