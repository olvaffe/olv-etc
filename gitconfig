[core]
	editor = vim

[alias]
	b = branch
	ba = branch -a
	bd = branch -D
	c = checkout
	cb = checkout -b
	ct = checkout -t
	cm = checkout origin/main
	c- = checkout @{-1}
	cp = cherry-pick
	f = fetch --prune
	fa = fetch --prune --all
	p = push
	pf = push --force
	r = rebase -i
	fixes = show -s --pretty='format:Fixes: %h (\"%s\")'
	me = config sendemail.from
	topic = checkout origin/main -b

[credential]
	helper = store

[init]
	defaultBranch = main

[http]
	cookiefile = ~/.config/git/cookies.txt

[pull]
	ff = only

[push]
	default = simple

