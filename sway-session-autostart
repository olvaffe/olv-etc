#!/bin/sh

# gnome defaults to 11pt while is good.  But it assumes 96dpi while my
# displays are 160dpi.  Scale by 1.50 or 1.75 depending on whether the display
# is internal or external.
text_scaling_factor="1.50"
[ $(swaymsg -t get_outputs | grep '"name"' | wc -l) -gt 1 ] && text_scaling_factor="1.75"
gsettings set org.gnome.desktop.interface text-scaling-factor "$text_scaling_factor"

#gsettings set org.gnome.desktop.interface cursor-size 36

nm-applet --indicator &
fcitx5 &

swayidle -w \
    timeout 300 'swaylock -f -c 000000' \
    timeout 330 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock -f -c 000000' \
    after-resume 'swaymsg "output * enable"' &
