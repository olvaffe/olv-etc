#!/bin/sh

# gnome defaults to 11pt.  But it assumes 96dpi while my displays are 160dpi.
gsettings set org.gnome.desktop.interface text-scaling-factor 1.6

#gsettings set org.gnome.desktop.interface cursor-size 36

nm-applet --indicator &
fcitx5 &

swayidle -w \
    timeout 300 'swaylock -f -c 000000' \
    timeout 330 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock -f -c 000000' \
    after-resume 'swaymsg "output * enable"' &
